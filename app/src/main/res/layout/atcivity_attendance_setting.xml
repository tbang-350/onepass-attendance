<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attendance_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/time1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeOneFrist"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeOneLast"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/time2"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeTwoFrist"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeTwoLast"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/time3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeThreeFrist"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeThreeLast"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/time4"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=":"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeFourFrist"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/timeFourLast"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="time"
            android:padding="5dp" />

    </LinearLayout>
</LinearLayout>